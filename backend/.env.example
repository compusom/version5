# === META ADS CREATIVE ASSISTANT - ENVIRONMENT VARIABLES ===

# === BASIC CONFIGURATION ===
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:5173

# === DATABASE CONFIGURATION (MySQL/MariaDB - Legacy) ===
DB_HOST=localhost
DB_PORT=3306
DB_NAME=meta_ads_db
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# === SUPABASE CONFIGURATION ===
# Obtén estos valores desde tu panel de Supabase (https://app.supabase.com)
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# === AI/ML CONFIGURATION ===
# Google Gemini API Key para análisis de creativos
GEMINI_API_KEY=your-gemini-api-key

# === META ADS API (OPCIONAL) ===
# Para integración directa con Meta Ads API
META_APP_ID=your-meta-app-id
META_APP_SECRET=your-meta-app-secret
META_ACCESS_TOKEN=your-meta-access-token

# === SECURITY ===
JWT_SECRET=your-super-secret-jwt-key-change-this
ENCRYPTION_KEY=your-encryption-key-32-chars-long

# === UPLOAD CONFIGURATION ===
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# === MCP CONFIGURATION ===
# Model Context Protocol settings
MCP_SERVER_NAME=meta-ads-creative-assistant
MCP_SERVER_VERSION=1.0.0

# === RATE LIMITING ===
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# === LOGGING ===
LOG_LEVEL=info
LOG_FORMAT=combined
